<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="3dp"
    app:cardBackgroundColor="#C5C5C5"
    app:cardCornerRadius="18dp"
    app:cardElevation="3dp"
    app:contentPadding="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:id="@+id/relativeLayout"
        android:padding="6dp"
        android:layout_marginBottom="8dp"
        >

        <TextView
            android:id="@+id/itemname"
            android:layout_width="236dp"
            android:layout_height="39dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/default_blue"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/destinaton"
            android:layout_width="225dp"
            android:layout_height="19dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/default_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemname" />

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/destinaton"
            app:layout_constraintTop_toBottomOf="@+id/itemname"
            app:srcCompat="@drawable/location2" />

        <TextView
            android:id="@+id/date"
            android:layout_width="225dp"
            android:layout_height="19dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/default_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/destinaton" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/date"
            app:layout_constraintTop_toBottomOf="@+id/destinaton"
            app:srcCompat="@drawable/calendar2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>